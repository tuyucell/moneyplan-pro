<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Piyasalar"
        android:textColor="#1F2937"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/widget_container">
        
        <!-- BIST 100 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="BIST 100"
                android:textColor="#374151"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price_bist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.100,50"
                android:textColor="#111827"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/change_bist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1.2%"
                android:textColor="#10B981"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- USD/TRY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="USD/TRY"
                android:textColor="#374151"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32.50"
                android:textColor="#111827"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/change_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.1%"
                android:textColor="#10B981"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- GOLD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="GRAM ALTIN"
                android:textColor="#374151"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/price_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.450"
                android:textColor="#111827"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/change_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.5%"
                android:textColor="#10B981"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
